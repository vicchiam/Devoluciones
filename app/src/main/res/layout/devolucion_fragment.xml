<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@color/my_white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_codigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_local_offer_black_24dp"/>

                <TextView
                    android:id="@+id/lbl_codigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_toRightOf="@+id/img_codigo"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/my_secondary_text"
                    android:text="@string/devol_codigo"/>

                <EditText
                    android:id="@+id/edit_codigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/my_primary_text"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/img_codigo"
                    android:layout_below="@+id/lbl_codigo"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_razon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_business_black_24dp"/>

                <TextView
                    android:id="@+id/lbl_razon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_toRightOf="@+id/img_razon"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/my_secondary_text"
                    android:text="@string/devol_razon"/>

                <EditText
                    android:id="@+id/edit_razon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/my_primary_text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/img_razon"
                    android:layout_below="@+id/lbl_razon"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_accion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_record_voice_over_black_24dp"/>

                <TextView
                    android:id="@+id/lbl_accion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_toRightOf="@+id/img_accion"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/my_secondary_text"
                    android:text="@string/devol_accion"/>

                <Spinner
                    android:id="@+id/spinner_accion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/img_accion"
                    android:layout_below="@+id/lbl_accion"
                    android:entries="@array/acciones"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:spinnerMode="dropdown"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/img_accion"
                    android:layout_below="@id/spinner_accion"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_motivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_assignment_late_black_24dp"/>

                <TextView
                    android:id="@+id/lbl_motivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_toRightOf="@+id/img_motivo"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/my_secondary_text"
                    android:text="@string/devol_motivo"/>

                <EditText
                    android:id="@+id/edit_motivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/my_primary_text"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/img_motivo"
                    android:layout_below="@+id/lbl_motivo"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/my_secondary_text"
        android:text="Lineas:"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"/>

    <ListView
        android:id="@+id/list_lineas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"/>

</LinearLayout>
